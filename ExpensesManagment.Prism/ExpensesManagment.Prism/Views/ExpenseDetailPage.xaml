<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:busyindicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:fftransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             xmlns:i18n="clr-namespace:ExpensesManagment.Prism.Helpers"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ExpensesManagment.Prism.Views.ExpenseDetailPage"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource ColorBackgroud}">

    <AbsoluteLayout>
        <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All"
                     Padding="5">
            <ScrollView>
                <StackLayout>
                    <ffimageloading:CachedImage Aspect="AspectFit"
                                                Source="{Binding Image}" 
                                                CacheDuration= "50"
                                                HeightRequest="300"
                                                Margin="5"
                                                RetryCount= "3"
                                                RetryDelay= "600">
                        <ffimageloading:CachedImage.Transformations>
                            <fftransformations:CropTransformation />
                        </ffimageloading:CachedImage.Transformations>
                    </ffimageloading:CachedImage>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               Grid.Column="0"
                               FontAttributes="Bold"
                               FontSize="Subtitle"
                               Text="{i18n:Translate ExpenseType}"
                               VerticalOptions="Center"/>
                        <Label Grid.Row="0"
                               Grid.Column="1"
                               FontAttributes="Italic"
                               FontSize="Subtitle"
                               Text="{Binding Expense.Type.Name}"
                               VerticalOptions="Center"/>

                        <Label Grid.Row="1"
                               Grid.Column="0"
                               FontAttributes="Bold"
                               FontSize="Subtitle"
                               Text="{i18n:Translate Details}"
                               VerticalOptions="Center"/>
                        <Label Grid.Row="1"
                               Grid.Column="1"
                               FontAttributes="Italic"
                               FontSize="Subtitle"
                               Text="{Binding Expense.Details}"
                               VerticalOptions="Center"/>

                        <Label Grid.Row="2"
                               Grid.Column="0"
                               FontAttributes="Bold"
                               FontSize="Subtitle"
                               Text="{i18n:Translate Value}"
                               VerticalOptions="Center"/>
                        <Label Grid.Row="2"
                               Grid.Column="1"
                               FontAttributes="Italic"
                               FontSize="Subtitle"
                               Text="{Binding Expense.Value , StringFormat='{0:#.00}'}"
                               VerticalOptions="Center"/>

                        <Label Grid.Row="3"
                               Grid.Column="0"
                               FontAttributes="Bold"
                               FontSize="Subtitle"
                               Text="{i18n:Translate Date}"
                               VerticalOptions="Center"/>
                        <Label Grid.Row="3"
                               Grid.Column="1"
                               FontAttributes="Italic"
                               FontSize="Subtitle"
                               Text="{Binding Expense.Date, StringFormat='{0:yyyy-MM-dd}'}"
                               VerticalOptions="Center"/>
                    </Grid>
                </StackLayout>
            </ScrollView>
            <StackLayout Orientation="Horizontal"
                         VerticalOptions="EndAndExpand">
                <Button Command="{Binding EditExpenseCommand}"
                        IsEnabled="{Binding IsEnabled}"
                        ImageSource="ic_edit"
                        Text="{i18n:Translate Edit}"/>
                <Button Command="{Binding DeleteExpenseCommand}"
                        IsEnabled="{Binding IsEnabled}"
                        Text="{i18n:Translate Delete}"
                        ImageSource="ic_delete_forever"
                        Style="{StaticResource DangerButton}"/>
            </StackLayout>
        </StackLayout>
        <busyindicator:SfBusyIndicator AnimationType="ZoomingTarget" 
                                       AbsoluteLayout.LayoutBounds=".5,.5,.5,.5"
                	                   AbsoluteLayout.LayoutFlags="All"
                	                   BackgroundColor="{StaticResource ColorAccent}"
                	                   HorizontalOptions="Center"
                	                   TextColor="{StaticResource ColorFontInverse}"
                	                   IsVisible="{Binding IsRunning}"
                	                   Title="{i18n:Translate Loading}"
                	                   VerticalOptions="Center"
                	                   ViewBoxWidth="80"
                	                   ViewBoxHeight="80" />
    </AbsoluteLayout>

</ContentPage>