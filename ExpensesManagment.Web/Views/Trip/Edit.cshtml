@model ExpensesManagment.Web.Models.TripViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>This trip was done by: @Model.User.FullName</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="TripId" />

            <partial name="_Trip" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="UserTripDetail" asp-route-id="@Model.UserId" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
